{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Система користувачів і контенту (з помилкою)",
  "type": "object",
  "properties": {
    "system": {
      "type": "object",
      "properties": {
        "назва": { "type": "string" },
        "users": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "ім’я": { "type": "string", "minLength": 2 },
              "логін": { "type": "string", "minLength": 3 },
              "пароль": { "type": "string", "minLength": 8 },
              "email": { "type": "string", "format": "email" }
            },
            "required": ["ім’я", "логін", "пароль", "email", "test_error"]
          }
        }
      },
      "required": ["назва", "users"]
    }
  },
  "required": ["system"]
}
